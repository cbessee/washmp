{% form_theme seniorSurveyForm 'forms/rows.html.twig' %}

{%  block body %}
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="{{ path('homepage') }}">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('show_student', {'id': student.id}) }}">{{ student.lastName }}, {{ student.firstName }}</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('edit_survey_form', {'id': student.id, 'survey_id': seniorSurvey.seniorSurveyID }) }}">Edit Senior Survey</a>
