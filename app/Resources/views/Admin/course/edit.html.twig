{%  extends 'base.html.twig' %}

{% form_theme teacherForm 'forms/rows.html.twig' %}

{%  block body %}
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="{{ path('homepage') }}">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('admin') }}">Admin</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('list_teachers') }}">Teachers</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('edit_teacher', {'id': teacher.teacherID}) }}">Edit {{ teacher.teacherName }}</a>
            </li>
        </ul>
    </div>
    <h1 class="page-title">Edit {{ teacher.teacherName }} </h1>

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box red-mint">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-building"></i>
                        <span class="caption-subject bold uppercase">Teacher Info</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    {{ include('forms/teacherForm.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{%  endblock %}