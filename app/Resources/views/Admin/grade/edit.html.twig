{%  extends 'base.html.twig' %}

{% form_theme gradeForm 'forms/rows.html.twig' %}

{%  block body %}
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="{{ path('homepage') }}">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('admin') }}">Admin</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('list_grades') }}">Grades</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('edit_grade', {'id': grade.k12gradeID}) }}">Edit {{ grade.grade }}</a>
            </li>
        </ul>
    </div>
    <h1 class="page-title">Edit {{ grade.grade }} </h1>

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box red-mint">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-building"></i>
                        <span class="caption-subject bold uppercase">Grade Info</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    {{ include('forms/gradeForm.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{%  endblock %}