{%  extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('/global/plugins/datatables/datatables.min.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('/global/plugins/datatables/plugins/datatables.bootstrap.css') }}" rel="stylesheet" type="text/css"/>
    {{ parent() }}
{%  endblock %}

{%  block body %}
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="{{ path('homepage') }}">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('admin') }}">Admin</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('list_activities') }}">Activities</a>
            </li>
        </ul>
    </div>

    <h1 class="page-title">Activities <small>View All Activities</small></h1>

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box red-mint">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-user"></i>
                        <span class="caption-subject bold uppercase">Activities</span>
                    </div>
                    <div class="actions">
                        <a href="{{ path('new_activity') }}" class="btn btn-circle btn-default">
                            <i class="fa fa-plus"></i>
                            New Activity
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Activity</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for activity in activities %}
                            <tr>
                                <td>{{ activity.activity }}</td>
                                <td>
                                    <a href="{{ path('edit_activity', {'id': activity.activityID}) }}" class="btn btn-circle btn-default">
                                        <i class="fa fa-pencil"></i>
                                        Edit Activity
                                    </a>
                                    <a href="{{ path('delete_activity', {'id': activity.activityID}) }}" class="btn btn-circle btn-default">
                                        <i class="fa fa-ban"></i>
                                        Delete Activity
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{%  endblock %}

{%  block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/global/plugins/datatables/datatables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/global/scripts/datatable.min.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.table').dataTable();
        })
    </script>
{%  endblock %}